{
  "manifest_version": 2,
  "name": "BulletBase - Pushbullet Addon",
  "version": "1.0.2",
  "description": "A feature-rich Pushbullet addon/extension for SMS mirroring and device management.",
  "icons": {
    "48": "icon.svg"
  },
  "permissions": [
    "storage",
    "notifications",
    "clipboardWrite",
    "https://api.pushbullet.com/*",
    "wss://stream.pushbullet.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_popup": "index.html",
    "default_title": "BulletBase"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "bulletbase@pushbullet.extension",
      "strict_min_version": "90.0",
      "data_collection_permissions": {
        "required": ["authenticationInfo"]
      }
    }
  },
  "developer": {
    "name": "BulletBase Contributors",
    "url": "https://github.com/yourusername/pushbullet-firefox"
  }
}
