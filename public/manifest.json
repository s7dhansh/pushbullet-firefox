{
  "manifest_version": 2,
  "name": "BulletBase - Pushbullet Client",
  "version": "1.0.2",
  "description": "A feature-rich Pushbullet client for SMS mirroring and device management.",
  "icons": {
    "48": "icon.svg"
  },
  "permissions": [
    "storage",
    "notifications",
    "https://api.pushbullet.com/*",
    "wss://stream.pushbullet.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_popup": "index.html",
    "default_title": "BulletBase"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.tailwindcss.com; object-src 'self'"
}